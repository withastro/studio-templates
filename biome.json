{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "files": {
    "ignore": ["*.astro"]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "warn"
      }
    },
    "ignore": [".astro/**/*"]
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
